<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>product/logs/application.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%date] [%level] [%thread] - %message%n%xException</pattern>
        </encoder>
    </appender>

    <appender name="REQFILE" class="ch.qos.logback.core.FileAppender">
        <file>product/logs/request.log</file>
        <append>true</append>
        <encoder>
            <pattern>%message%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%message%n%xException{30}</pattern>
        </encoder>
    </appender>

    <logger name="application" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="request" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="REQFILE"/>
    </logger>

</configuration>